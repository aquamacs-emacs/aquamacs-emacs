+ int
+ mac_pass_key_to_system (int xkeysym, UInt32 modifiers)
+ {
+   if (this_command_key_count
+       || !NILP (current_buffer->read_only)
+       || cursor_in_echo_area)
+     return FALSE;
+   else if (mac_use_inline_input_method && !converting)
+     {
+       Fsymbol_value (Qcurrent_input_method);
+       Lisp_Object keys = Fsymbol_value (Qmac_ignore_shortcut);
+       Lisp_Object m, k;
+ 
+       while (!NILP (keys))
+ 	{
+ 	  m = XCAR (XCAR (keys));
+ 	  k = XCDR (XCAR (keys));
+ 	  keys = XCDR (keys);
+ 	  
+ 	  if (NUMBERP (m) && modifiers == XINT (m))
+ 	    if (NILP (k)
+ 		|| (NUMBERP (k) && xkeysym == XINT (k)))
+ 	      return FALSE;
+ 	}
+       return TRUE;
+     }
+   else
+     return TRUE;
+ }
