#!/bin/sh

AQUAMACS_ROOT="${HOME}/aquamacs-emacs"

echo "Run this with the auctex source distribution as current directory."
echo "Be sure to have a compiled Aquamacs available in nextstep/Aauamacs.app"

EMACS="${AQUAMACS_ROOT}/nextstep/Aquamacs.app/Contents/MacOS/Aquamacs"
AQ_MODES_DIR="${AQUAMACS_ROOT}/aquamacs/src/site-lisp/edit-modes"

# this assumes an Aquamacs install in /Applications

# curl -O http://ftp.gnu.org/pub/gnu/auctex/auctex-11.84.tar.gz
# cd ../../auctex*

#tar xzf auctex*.tar.gz
# cd auctex-*
./configure --prefix="${AQUAMACS_ROOT}/src/site-lisp/edit-modes/" --with-emacs="${EMACS}" --with-lispdir="${AQUAMACS_ROOT}/src/site-lisp/edit-modes" --without-texmf-dir

make

rm -r ${AQUAMACS_ROOT}/src/site-lisp/edit-modes/auctex
cp doc/auctex.info "${AQUAMACS_ROOT}/src/site-lisp/edit-modes/info/"
cp doc/preview-latex.info "${AQUAMACS_ROOT}/src/site-lisp/edit-modes/info/"

make install

# manual fixes:
# set TeX-auto-global to nil in tex-site.
# add aquamacs-specific patches
